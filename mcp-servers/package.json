{
  "name": "@humanity4ai/mcp-servers",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "description": "MCP contracts and runtime server for Humanity4AI skills",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanity4ai/project_human.git",
    "directory": "mcp-servers"
  },
  "homepage": "https://github.com/humanity4ai/project_human/tree/main/mcp-servers",
  "bugs": {
    "url": "https://github.com/humanity4ai/project_human/issues"
  },
  "author": "Ascent Partners Foundation <simon@ascent.partners>",
  "keywords": [
    "mcp",
    "ai",
    "schemas",
    "contracts",
    "humanity4ai"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./handlers": {
      "types": "./dist/handlers.d.ts",
      "default": "./dist/handlers.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./validate": {
      "types": "./dist/validate.d.ts",
      "default": "./dist/validate.js"
    },
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/handlers.js",
    "dist/handlers.d.ts",
    "dist/types.js",
    "dist/types.d.ts",
    "dist/validate.js",
    "dist/validate.d.ts",
    "schemas",
    "src/contracts.json",
    "README.md"
  ],
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "check:test": "tsc --project tsconfig.test.json",
    "build": "tsc --project tsconfig.build.json",
    "build:contracts": "tsx src/export-contracts.ts",
    "start": "tsx src/server.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepack": "pnpm run build:contracts && pnpm run build"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
